<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/img_red"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/rb_icon_normal" />

    <TextView
        android:id="@+id/notificationTextView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_redpacket_notification_bg"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="小米"
        android:textColor="#1ECE94" />

    <TextView
        android:id="@+id/notificationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_redpacket_notification_bg"
        android:gravity="center"
        android:padding="5dp"
        android:text=" 领取了你的红包"
        android:textColor="#1A0022" />

</LinearLayout>
