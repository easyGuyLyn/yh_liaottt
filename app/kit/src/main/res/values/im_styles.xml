<resources>

    <style name="ImSdkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ImSdkTheme.ThemeAppbar" >
        <item name="actionMenuTextColor">@color/im_menu_text_color</item>
        <item name="overlapAnchor">false</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlNormal">@color/im_white</item>
    </style>

    <style name="ImSdkTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <!--全屏样式-->
    <style name="ImSdkTheme.FullScreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--圆角Dialog-->

    <!--自定义CheckBox样式-->
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/im_checkbox_style</item>
    </style>

    <!--实下滑线样式-->
    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/im_line</item>
    </style>

    <!--选项条目样式-->
    <style name="OptionItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
