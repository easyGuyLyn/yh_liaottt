<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <com.nwf.sports.ui.views.PNTitleBar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/v_dep_name_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:moreColor="#FF3300"
        app:moreImage="@android:color/transparent"
        app:moreText=""
        app:titleText="点卡信息" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/color_F3F3F4"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46px"
                android:layout_marginTop="48px"
                android:layout_marginRight="46px"
                android:background="@drawable/edittext_common_bg"
                android:gravity="center_vertical"
                android:minHeight="160px"
                android:orientation="horizontal"
                android:paddingLeft="50px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="点卡类型"
                    android:textColor="#4A4A4A"
                    android:textSize="41px" />

                <TextView
                    android:id="@+id/tvw_pc_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/icon_dropdownx"
                    android:gravity="center_vertical"
                    android:hint="请选择"
                    android:paddingLeft="48px"
                    android:paddingRight="48px"
                    android:text=""
                    android:textColor="#000000"
                    android:textColorHint="@color/color_9B9B9B"
                    android:textSize="41px" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46px"
                android:layout_marginTop="48px"
                android:layout_marginRight="46px"
                android:background="@drawable/edittext_common_bg"
                android:gravity="center_vertical"
                android:minHeight="160px"
                android:orientation="horizontal"
                android:paddingLeft="50px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="点卡面值"
                    android:textColor="#4A4A4A"
                    android:textSize="41px" />

                <TextView
                    android:id="@+id/tvw_pc_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/icon_dropdownx"
                    android:gravity="center_vertical"
                    android:hint="请选择"
                    android:paddingLeft="48px"
                    android:paddingRight="48px"
                    android:text=""
                    android:textColor="#000000"
                    android:textColorHint="@color/color_9B9B9B"
                    android:textSize="41px" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="20dp"
                android:background="@color/color_F3F3F4"
                android:visibility="visible" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46px"
                android:layout_marginTop="48px"
                android:layout_marginRight="46px"
                android:background="@drawable/edittext_common_bg"
                android:gravity="center_vertical"
                android:minHeight="160px"
                android:orientation="horizontal"
                android:paddingLeft="50px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="点卡卡号"
                    android:textColor="#4A4A4A"
                    android:textSize="41px" />

                <EditText
                    android:id="@+id/edt_pc_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3px"
                    android:layout_marginRight="60px"
                    android:layout_marginBottom="2px"
                    android:layout_weight="1"
                    android:background="@color/color_white"
                    android:gravity="center_vertical"
                    android:hint=""
                    android:maxLength="60"
                    android:paddingLeft="48px"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#000000"
                    android:textColorHint="@color/color_9B9B9B"
                    android:textSize="41px" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46px"
                android:layout_marginTop="48px"
                android:layout_marginRight="46px"
                android:background="@drawable/edittext_common_bg"
                android:gravity="center_vertical"
                android:minHeight="160px"
                android:orientation="horizontal"
                android:paddingLeft="50px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="点卡密码"
                    android:textColor="#4A4A4A"
                    android:textSize="41px" />

                <EditText
                    android:id="@+id/edt_pc_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3px"
                    android:layout_marginRight="60px"
                    android:layout_marginBottom="2px"
                    android:layout_weight="1"
                    android:background="@color/color_white"
                    android:gravity="center_vertical"
                    android:hint=""
                    android:maxLength="60"
                    android:paddingLeft="48px"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#000000"
                    android:textColorHint="@color/color_9B9B9B"
                    android:textSize="41px" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="20dp"
                android:background="@color/color_F3F3F4"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="手续费："
                    android:textColor="#4A4A4A"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvw_pc_handle_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="--"
                    android:text=""
                    android:textColor="@color/color_FF3300"
                    android:textColorHint="@color/color_FF3300"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="实际到账："
                    android:textColor="#4A4A4A"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvw_pc_real_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="--"
                    android:text=""
                    android:textColor="@color/color_FF3300"
                    android:textColorHint="@color/color_FF3300"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100px"
                android:layout_marginTop="50px"
                android:layout_marginRight="100px"
                android:background="@drawable/bg_login_button_bg"
                android:enabled="false"
                android:gravity="center"
                android:paddingBottom="45px"
                android:text="去存款"
                android:textColor="@color/color_white"
                android:textSize="50px" />

            <TextView
                android:id="@+id/hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:text="* 请务必使用与您 所选面额相同的卡进行支付，否则引起的交易失败或金额丢失，我方不予承担！\t如：您选择10元面额但使用30元卡支付，则系统认为实际交付金额为10元，高于10元部分不予退还。"
                android:textColor="@color/color_4A4A4A" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
