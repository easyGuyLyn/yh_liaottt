<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.nwf.sports.ui.views.PNTitleBar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/v_dep_transfer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:moreImageShow="false"
        app:titleText="完成转账" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_F3F3F4"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/show_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/bank_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bank_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="银行卡转账"
                android:textColor="@color/color_4A4A4A"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/bank_below"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/color_1ECE94"
                android:minWidth="100dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/alipay_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alipay_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="支付宝支付"
                android:textColor="@color/color_4A4A4A"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/alipay_below"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/color_1ECE94"
                android:minWidth="100dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_F3F3F4"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/bank_show_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="46px"
                    android:layout_marginTop="60px"
                    android:layout_marginRight="46px"
                    android:background="@drawable/deposit_bank_faster_item_bg"
                    android:gravity="center"
                    android:minHeight="160px"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="60px"
                        android:gravity="center|left"
                        android:minWidth="200px"
                        android:text="收款银行"
                        android:textColor="@color/color_4A4A4A"
                        android:textSize="40px" />

                    <TextView
                        android:id="@+id/tv_deposite_faster_bankname"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="中国工商银行"
                        android:textColor="@color/color_black"
                        android:textSize="40px" />

                    <ImageView
                        android:id="@+id/ivw_del"
                        android:layout_width="wrap_content"
                        android:layout_height="60px"
                        android:layout_marginRight="50px"
                        android:background="@mipmap/icon_deposit_bank_copy"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rl_deposite_faster_accountnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="46px"
                    android:layout_marginTop="40px"
                    android:layout_marginRight="46px"
                    android:background="@drawable/deposit_bank_faster_item_bg"
                    android:gravity="center"
                    android:minHeight="160px"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="60px"
                        android:gravity="center|left"
                        android:minWidth="200px"
                        android:text="收款卡号"
                        android:textColor="@color/color_4A4A4A"
                        android:textSize="40px" />

                    <TextView
                        android:id="@+id/tv_deposite_faster_accountnumber"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="2200 0000 0000 0000"
                        android:textColor="@color/color_black"
                        android:textSize="40px" />

                    <ImageView
                        android:id="@+id/im_deposite_faster_accountnumber"
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:layout_marginRight="50px"
                        android:background="@mipmap/icon_deposit_bank_copy" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_dep_bank_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="46px"
                    android:layout_marginTop="40px"
                    android:layout_marginRight="46px"
                    android:background="@drawable/deposit_bank_faster_item_bg"
                    android:gravity="center"
                    android:minHeight="160px"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="60px"
                        android:gravity="center|left"
                        android:minWidth="200px"
                        android:text="开户城市"
                        android:textColor="@color/color_4A4A4A"
                        android:textSize="40px" />

                    <TextView
                        android:id="@+id/tv_deposite_faster_bankcity"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="北京市"
                        android:textColor="@color/color_black"
                        android:textSize="40px" />

                    <ImageView
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:layout_marginRight="50px"
                        android:background="@mipmap/icon_deposit_bank_copy" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_dep_bank_branch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="46px"
                    android:layout_marginTop="40px"
                    android:layout_marginRight="46px"
                    android:background="@drawable/deposit_bank_faster_item_bg"
                    android:gravity="center"
                    android:minHeight="160px"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="60px"
                        android:gravity="center|left"
                        android:minWidth="200px"
                        android:text="开户支行"
                        android:textColor="@color/color_4A4A4A"
                        android:textSize="40px" />

                    <TextView
                        android:id="@+id/ll_dep_bank_branch_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="北京市"
                        android:textColor="@color/color_black"
                        android:textSize="40px" />

                    <ImageView
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:layout_marginRight="50px"
                        android:background="@mipmap/icon_deposit_bank_copy" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rl_deposite_faster_accountname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="46px"
                    android:layout_marginTop="40px"
                    android:layout_marginRight="46px"
                    android:background="@drawable/deposit_bank_faster_item_bg"
                    android:gravity="center"
                    android:minHeight="160px"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="60px"
                        android:gravity="center|left"
                        android:minWidth="200px"
                        android:text="收款姓名"
                        android:textColor="@color/color_4A4A4A"
                        android:textSize="40px" />

                    <TextView
                        android:id="@+id/tv_deposite_faster_accountname"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="方文"
                        android:textColor="@color/color_black"
                        android:textSize="40px" />

                    <ImageView
                        android:id="@+id/im_deposite_faster_accountname"
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:layout_marginRight="50px"
                        android:background="@mipmap/icon_deposit_bank_copy" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_dep_bank_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="46px"
                    android:layout_marginTop="40px"
                    android:layout_marginRight="46px"
                    android:background="@drawable/deposit_bank_faster_item_bg"
                    android:gravity="center"
                    android:minHeight="160px"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="60px"
                        android:gravity="center|left"
                        android:minWidth="200px"
                        android:text="收款金额"
                        android:textColor="@color/color_4A4A4A"
                        android:textSize="40px" />

                    <TextView
                        android:id="@+id/tv_deposite_faster_ebankmoney"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="10,000.00元"
                        android:textColor="@color/color_black"
                        android:textSize="40px" />

                    <ImageView
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:layout_marginRight="50px"
                        android:background="@mipmap/icon_deposit_bank_copy" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvw_deposit_faster_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="请转账上方显示金额至收款卡"
                    android:textColor="@color/color_FF3300"
                    android:textSize="36px"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/rl_deposite_faster_ebankmoney_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="46px"
                    android:layout_marginTop="40px"
                    android:layout_marginRight="46px"
                    android:background="@drawable/deposit_bank_faster_item_bg"
                    android:gravity="center"
                    android:minHeight="160px"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="60px"
                        android:gravity="center|left"
                        android:minWidth="200px"
                        android:text="备注信息"
                        android:textColor="@color/color_4A4A4A"
                        android:textSize="40px" />

                    <TextView
                        android:id="@+id/tv_deposite_faster_ebankmoney_remark"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="1234"
                        android:textColor="@color/color_black"
                        android:textSize="40px" />

                    <ImageView
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:layout_marginRight="50px"
                        android:background="@mipmap/icon_deposit_bank_copy" />
                </LinearLayout>


                <TextView
                    android:id="@+id/btn_ok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100px"
                    android:layout_marginTop="100px"
                    android:layout_marginRight="100px"
                    android:background="@drawable/bg_login_button_bg"
                    android:enabled="true"
                    android:gravity="center"
                    android:paddingBottom="45px"
                    android:text="我存完了"
                    android:textColor="@color/color_white"
                    android:textSize="50px" />

                <TextView
                    android:id="@+id/tv_conceal_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@mipmap/home_page_no_net"
                    android:gravity="center"
                    android:paddingBottom="86px"
                    android:text="若收款卡号和收款姓名被隐藏显示，请联系客服"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="40px" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/alipay_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/alipay_imag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:src="@mipmap/nwf_icon_alipay" />

                <TextView
                    android:id="@+id/btn_to_zfb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/alipay_imag"
                    android:layout_marginLeft="100px"
                    android:layout_marginTop="100px"
                    android:layout_marginRight="100px"
                    android:background="@drawable/bg_login_button_bg"
                    android:gravity="center"
                    android:paddingBottom="45px"
                    android:text="前往支付宝转账"
                    android:textColor="@color/color_white"
                    android:textSize="50px" />
            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>

    <TextView
        android:id="@+id/tvw_dep_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="30px"
        android:text="查看转账教程" />
</LinearLayout>