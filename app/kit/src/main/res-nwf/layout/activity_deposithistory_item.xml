<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="60px"
    android:paddingRight="60px">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_date_item_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="51px"
            android:layout_marginBottom="51px"
            android:text="04-23 18:50"
            android:textColor="@color/color_9B9B9B"
            android:textSize="40px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="24dp">

            <TextView
                android:id="@+id/tv_money_item_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="1,000.00元"
                android:textColor="#000000"
                android:textSize="46px" />

            <TextView
                android:id="@+id/tv_note_item_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingTop="10px"
                android:text="通关奖金天天送不停"
                android:textColor="#4A4A4A"
                android:textSize="33px"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_status_item_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已派发"
            android:textColor="#FF7ED321"
            android:textSize="40px" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_DFDDE6"/>
</LinearLayout>