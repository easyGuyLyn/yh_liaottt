<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <com.nwf.sports.ui.views.PNTitleBar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/v_dep_name_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:moreColor="#FF3300"
        app:moreImage="@android:color/transparent"
        app:moreText=""
        app:titleText="添加银行卡" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/color_F3F3F4"
        android:visibility="visible" />

    <ScrollView
        android:id="@+id/group_addbank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ly_addbank_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46px"
                android:layout_marginTop="40px"
                android:layout_marginRight="46px"
                android:background="@drawable/edittext_common_select_bg"
                android:gravity="center"
                android:minHeight="160px"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="60px"
                    android:gravity="center|left"
                    android:minWidth="200px"
                    android:text="持卡人"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="40px" />

                <EditText
                    android:id="@+id/ed_addbank_name"
                    android:layout_width="241dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="请输入持卡人姓名"
                    android:text=""
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/color_9B9B9B"
                    android:textSize="40px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46px"
                android:layout_marginTop="40px"
                android:layout_marginRight="46px"
                android:background="@drawable/edittext_common_select_bg"
                android:gravity="center"
                android:minHeight="160px"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="60px"
                    android:gravity="center|left"
                    android:minWidth="200px"
                    android:text="银行卡号"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="40px" />

                <EditText
                    android:id="@+id/ed_addbank_account"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="请输入银行卡号"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="19"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/color_9B9B9B"
                    android:textSize="40px" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_addbank_account_error_auth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20px"
                android:text="请输入正确的银行卡号"
                android:textColor="@color/color_FF3300"
                android:textSize="35px"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/addbank_bank_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46px"
                android:layout_marginTop="40px"
                android:layout_marginRight="46px"
                android:background="@drawable/edittext_common_select_bg"
                android:gravity="center"
                android:minHeight="160px"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="60px"
                    android:gravity="center|left"
                    android:minWidth="200px"
                    android:text="开卡银行"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="40px" />

                <ImageView
                    android:id="@+id/ivw_bank_logo"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:padding="2dp"
                    android:src="@mipmap/nwf_bank_zs"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_addbank_bank"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="请选择开卡银行"
                    android:text=""
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/color_9B9B9B"
                    android:textSize="40px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50px"
                    android:background="@mipmap/icon_dropdownx" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addbank_city_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46px"
                android:layout_marginTop="40px"
                android:layout_marginRight="46px"
                android:background="@drawable/edittext_common_select_bg"
                android:gravity="center"
                android:minHeight="160px"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="60px"
                    android:gravity="center|left"
                    android:minWidth="200px"
                    android:text="开卡城市"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/tv_addbank_city"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="请选择开卡城市"
                    android:text=""
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/color_9B9B9B"
                    android:textSize="40px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50px"
                    android:background="@mipmap/icon_dropdownx" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46px"
                android:layout_marginTop="40px"
                android:layout_marginRight="46px"
                android:background="@drawable/edittext_common_select_bg"
                android:gravity="center"
                android:minHeight="160px"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="60px"
                    android:gravity="center|left"
                    android:minWidth="200px"
                    android:text="开卡网点"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="40px" />

                <EditText
                    android:id="@+id/ed_addbank_branch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="请输入开卡网点"
                    android:lines="1"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/color_9B9B9B"
                    android:textSize="40px" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_addbank_branch_error_auth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20px"
                android:text="请输入正确的银行卡号"
                android:textColor="@color/color_FF3300"
                android:textSize="35px"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100px"
                android:layout_marginTop="120px"
                android:layout_marginRight="100px"
                android:layout_marginBottom="180px"
                android:background="@drawable/bg_login_button_bg"
                android:enabled="false"
                android:gravity="center"
                android:paddingBottom="45px"
                android:text="确定"
                android:textColor="@color/color_white"
                android:textSize="50px" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
