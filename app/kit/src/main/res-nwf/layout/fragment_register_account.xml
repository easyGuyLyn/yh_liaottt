<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/login_bg_figure" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/login_top_figure" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/login_below_figure" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:text="登录永乐棋牌，享更爽游戏体验"
            android:textColor="@color/color_4A4A4A"
            android:textSize="43px"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="账号注册"
            android:textColor="@color/color_black"
            android:textSize="70px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46px"
            android:layout_marginTop="86px"
            android:layout_marginRight="46px"
            android:background="@drawable/edittext_common_bg"
            android:gravity="center_vertical"
            android:minHeight="160px"
            android:orientation="horizontal"
            android:paddingLeft="50px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50px"
                android:gravity="center"
                android:text="账号"
                android:textColor="@color/color_4A4A4A" />

            <EditText
                android:id="@+id/ed_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2px"
                android:layout_marginRight="70px"
                android:layout_marginBottom="2px"
                android:background="@color/color_white"
                android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                android:gravity="center_vertical"
                android:hint="请设置账号"
                android:lines="1"
                android:maxLength="11"
                android:singleLine="true"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_9B9B9B"
                android:textSize="40px" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_register_account_err"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12px"
                android:paddingLeft="240px"
                android:text="由5~11位字母或者数字组合"
                android:textColor="@color/color_4A4A4A"
                android:textSize="35px" />

            <TextView
                android:id="@+id/skip_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_register_account_err"
                android:layout_marginLeft="100px"
                android:layout_marginTop="150px"
                android:layout_marginRight="100px"
                android:background="@drawable/bg_login_button_bg"
                android:enabled="false"
                android:gravity="center"
                android:paddingBottom="45px"
                android:text="下一步"
                android:textColor="@color/color_white"
                android:textSize="50px" />

            <TextView
                android:id="@+id/skip_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/skip_second"
                android:gravity="center"
                android:padding="20px"
                android:text="手机号注册"
                android:textColor="@color/color_4A4A4A"
                android:textSize="35px" />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingBottom="86px"
        android:text="还没有账号？立即注册"
        android:textColor="@color/color_9B9B9B"
        android:textSize="34px" />

</RelativeLayout>