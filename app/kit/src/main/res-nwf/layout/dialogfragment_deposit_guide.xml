<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/transparency"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="250px"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_login_dialogfragment"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivw_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="50px"
            android:layout_marginRight="40px"
            android:padding="24px"
            android:src="@mipmap/icon_close" />

        <TextView
            android:id="@+id/tvw_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_deposit_guide_spn_selector"
            android:drawableRight="@mipmap/icon_dropdownx"
            android:drawablePadding="4dp"
            android:padding="8dp"
            android:text="支付宝转账教程"
            android:textColor="@color/color_4A4A4A"
            android:textSize="45px" />

        <Spinner
            android:id="@+id/spn_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:background="@null"
            android:minWidth="48dp"
            android:popupBackground="#00FFFFFF"
            android:spinnerMode="dropdown" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="wrap_content"
            android:layout_height="1250px"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp" />


        <com.nwf.sports.ui.views.BannerIndicatorView
            android:id="@+id/banner_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30px"
            android:layout_marginBottom="30px"
            android:minHeight="50px"
            app:app_normal_color="@color/color_ECEBED"
            app:app_selected_color="@color/color_1ECE94" />
    </LinearLayout>
</LinearLayout>
