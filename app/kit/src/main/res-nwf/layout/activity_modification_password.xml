<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">


    <com.nwf.sports.ui.views.PNTitleBar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/v_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:moreColor="#FF3300"
        app:moreImage="@android:color/transparent"
        app:moreText=""
        app:titleText="修改登录密码" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/color_F3F3F4"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46px"
        android:layout_marginTop="60px"
        android:layout_marginRight="46px"
        android:background="@drawable/edittext_common_bg"
        android:gravity="center_vertical"
        android:minHeight="160px"
        android:orientation="horizontal"
        android:paddingLeft="50px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:minWidth="200px"
            android:text="旧密码"
            android:textColor="@color/color_4A4A4A" />

        <EditText
            android:id="@+id/ed_original_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2px"
            android:layout_marginRight="50px"
            android:layout_marginBottom="2px"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:ems="16"
            android:gravity="center_vertical"
            android:hint="验证原登录密码"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="16"
            android:singleLine="true"
            android:textColor="@color/color_black"
            android:textColorHint="@color/color_9B9B9B"
            android:textSize="40px" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_account_auth_code_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:gravity="center"
        android:text="您输入的密码不正确，请重新输入"
        android:textColor="@color/color_FF3300"
        android:textSize="35px"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46px"
        android:layout_marginTop="100px"
        android:layout_marginRight="46px"
        android:background="@drawable/edittext_common_bg"
        android:gravity="center_vertical"
        android:minHeight="160px"
        android:orientation="horizontal"
        android:paddingLeft="50px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:minWidth="200px"
            android:text="新密码"
            android:textColor="@color/color_4A4A4A" />

        <EditText
            android:id="@+id/ed_new_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2px"
            android:layout_marginRight="50px"
            android:layout_marginBottom="2px"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:ems="16"
            android:gravity="center_vertical"
            android:hint="输入新登录密码"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="16"
            android:singleLine="true"
            android:textColor="@color/color_black"
            android:textColorHint="@color/color_9B9B9B"
            android:textSize="40px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46px"
        android:layout_marginTop="35px"
        android:layout_marginRight="46px"
        android:background="@drawable/edittext_common_bg"
        android:gravity="center_vertical"
        android:minHeight="160px"
        android:orientation="horizontal"
        android:paddingLeft="50px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:minWidth="200px"
            android:text="确认密码"
            android:textColor="@color/color_4A4A4A" />

        <EditText
            android:id="@+id/ed_verify_new_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2px"
            android:layout_marginRight="50px"
            android:layout_marginBottom="2px"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:ems="16"
            android:gravity="center_vertical"
            android:hint="确认新登录密码"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="16"
            android:singleLine="true"
            android:textColor="@color/color_black"
            android:textColorHint="@color/color_9B9B9B"
            android:textSize="40px" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_err_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18px"
        android:gravity="center"
        android:text="6~16位字母或数字组合"
        android:textColor="#9B9B9B"
        android:textSize="35px" />

    <TextView
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100px"
        android:layout_marginTop="150px"
        android:layout_marginRight="100px"
        android:background="@drawable/bg_login_button_bg"
        android:enabled="false"
        android:gravity="center"
        android:paddingBottom="45px"
        android:text="登录"
        android:textColor="@color/color_white"
        android:textSize="50px" />
</LinearLayout>