<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="64dp">

    <com.nwf.sports.ui.views.PNTitleBar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/v_dep_name_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:moreColor="#FF3300"
        app:moreImage="@android:color/transparent"
        app:moreText=""
        app:titleText="玩法规则" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="0dp"
        android:background="#C8C7CC" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bg_regulation_saolei_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45px"
            android:layout_marginRight="45px"
            android:text="扫雷红包"
            android:textColor="@color/color_221D4C"
            android:textSize="50px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bg_regulation_saolei_right" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_saolei_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/introduce_saolei" />


        <ImageView
            android:id="@+id/img_saolei_regulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/rule_saolei" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bg_regulation_niu_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45px"
            android:layout_marginRight="45px"
            android:text="牛牛红包"
            android:textColor="@color/color_221D4C"
            android:textSize="50px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bg_regulation_niu_left" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_niuniu_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/introduce_niu" />


        <ImageView
            android:id="@+id/img_niuniu_regulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/rule_niu" />

    </LinearLayout>

</LinearLayout>