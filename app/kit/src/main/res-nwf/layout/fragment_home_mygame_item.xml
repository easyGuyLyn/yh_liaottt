<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="10px"
    android:paddingRight="10px">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_game_image"
            android:layout_width="150px"
            android:layout_height="150px"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/item_game_maintenance"
            android:layout_width="150px"
            android:layout_height="150px"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_game_maintenance"
            android:visibility="gone" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_game_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:text="VG斗地主"
            android:textColor="@color/color_221D4C"
            android:textSize="32px" />

        <TextView
            android:id="@+id/tv_start_game"
            android:layout_width="180px"
            android:layout_height="60px"
            android:layout_marginTop="20px"
            android:background="@drawable/bg_home_game_item_promptly"
            android:gravity="center"
            android:text="立即游戏"
            android:textColor="@color/color_4B85FD"
            android:textSize="30px" />

    </LinearLayout>
</LinearLayout>