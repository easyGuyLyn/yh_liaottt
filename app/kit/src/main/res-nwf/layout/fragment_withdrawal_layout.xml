<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/withdrawal_bank_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46px"
            android:layout_marginTop="86px"
            android:layout_marginRight="46px"
            android:layout_marginBottom="20px"
            android:background="@drawable/edittext_common_bg"
            android:gravity="center_vertical"
            android:minHeight="160px"
            android:orientation="horizontal"
            android:paddingLeft="50px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="取款金额"
                android:textColor="@color/color_4A4A4A"
                android:textSize="40px" />

            <EditText
                android:id="@+id/et_withdrawal_money"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2px"
                android:layout_marginBottom="2px"
                android:layout_weight="1"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:hint="@string/str_dep_amount_hint"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:lines="1"
                android:maxLength="7"
                android:paddingLeft="30px"
                android:singleLine="true"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_9B9B9B"
                android:textSize="40px" />

            <TextView
                android:id="@+id/bt_all_money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/bg_verification_code_bg"
                android:enabled="true"
                android:gravity="center"
                android:minWidth="280px"
                android:text="@string/str_all_balance"
                android:textColor="@color/color_white"
                android:textSize="40px" />

        </LinearLayout>

        <TextView
            android:id="@+id/err_money_withdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="单笔限额：100元～500万，请重新输入"
            android:textColor="#FF3300"
            android:textSize="40px" />

        <TextView
            android:id="@+id/btn_withdraw_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:layout_marginTop="120px"
            android:layout_marginRight="100px"
            android:layout_marginBottom="180px"
            android:background="@drawable/bg_login_button_bg"
            android:enabled="true"
            android:gravity="center"
            android:paddingBottom="45px"
            android:text="确定"
            android:textColor="@color/color_white"
            android:textSize="50px" />
    </LinearLayout>

</LinearLayout>