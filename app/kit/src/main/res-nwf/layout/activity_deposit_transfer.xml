<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/v_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <com.nwf.sports.ui.views.PNTitleBar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/v_dep_transfer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:moreImageShow="false"
        app:titleText="存款人姓名" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_F3F3F4"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="46px"
        android:paddingRight="46px">

        <TextView
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/color_E2E2E2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:text="转账方式"
            android:textSize="40px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/color_E2E2E2" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_dep_bq_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp" />

    <LinearLayout
        android:id="@+id/ll_dep_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46px"
        android:layout_marginTop="60px"
        android:layout_marginRight="46px"
        android:background="@drawable/edittext_common_bg"
        android:gravity="center_vertical"
        android:minHeight="160px"
        android:orientation="horizontal"
        android:paddingLeft="50px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:minWidth="150px"
            android:text="姓名"
            android:textColor="@color/color_4A4A4A" />

        <EditText
            android:id="@+id/edt_dep_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2px"
            android:layout_marginBottom="2px"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:gravity="center_vertical"
            android:hint="请输入姓名"
            android:singleLine="true"
            android:textColor="@color/color_black"
            android:textColorHint="@color/color_9B9B9B"
            android:textSize="40px" />

        <ImageView
            android:id="@+id/ivw_del"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginRight="50px"
            android:background="@mipmap/icon_empty" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="46px"
        android:paddingRight="46px">

        <TextView
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/color_E2E2E2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:text="选择收款银行"
            android:textSize="40px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/color_E2E2E2" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_dep_bank_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100px"
        android:layout_marginTop="150px"
        android:layout_marginRight="100px"
        android:background="@drawable/bg_login_button_bg"
        android:enabled="false"
        android:gravity="center"
        android:paddingBottom="45px"
        android:text="获取收款账户"
        android:textColor="@color/color_white"
        android:textSize="50px" />
</LinearLayout>
