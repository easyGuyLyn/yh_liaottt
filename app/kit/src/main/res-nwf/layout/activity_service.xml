<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.nwf.sports.ui.views.PNTitleBar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/v_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:moreColor="#FF3300"
        app:moreImage="@android:color/transparent"
        app:moreText=""
        app:titleText="@string/n_contact_service" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/color_F3F3F4"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_homepage_introduce_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="38px"
                android:background="@drawable/bg_serve_title"
                android:gravity="center"
                android:minHeight="90px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:text="@string/n_contact_service_choice"
                android:textColor="#4A4A4A"
                android:textSize="34px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="60px"
                android:gravity="center"
                android:text="@string/n_contact_service_callback"
                android:textColor="#000000"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginTop="30px"
                android:layout_marginRight="50px"
                android:background="@drawable/edittext_common_bg"
                android:gravity="center_vertical"
                android:minHeight="160px"
                android:orientation="horizontal"
                android:paddingLeft="50px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50px"
                    android:gravity="center"
                    android:text="手机号"
                    android:textColor="@color/color_4A4A4A" />

                <EditText
                    android:id="@+id/ed_phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2px"
                    android:layout_marginBottom="2px"
                    android:layout_weight="1"
                    android:background="@color/color_white"
                    android:gravity="center_vertical"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="12"
                    android:singleLine="true"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/color_9B9B9B"
                    android:textSize="40px" />

                <ImageView
                    android:id="@+id/iv_service_phone_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="60px"
                    android:layout_marginRight="50px"
                    android:background="@mipmap/icon_empty"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_service_phone_error_auth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:gravity="center|right"
                android:minHeight="60px"
                android:paddingRight="120px"
                android:text="请输入正确的电话号码"
                android:textColor="@color/color_FF3300"
                android:textSize="35px"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/btn_callback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/im_wait"
                android:layout_gravity="center"
                android:layout_marginLeft="100px"
                android:layout_marginTop="20px"
                android:layout_marginRight="100px"
                android:layout_marginBottom="100px"
                android:background="@drawable/bg_login_button_bg"
                android:enabled="false"
                android:gravity="center"
                android:paddingBottom="45px"
                android:text="确认回拨"
                android:textColor="@color/color_white"
                android:textSize="50px" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:gravity="center"
                android:text="@string/n_contact_service_online"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10px"
                android:text="专业的客服人员为您服务，为您答疑解惑"
                android:textColor="@color/color_4A4A4A"
                android:textSize="30px" />

            <TextView
                android:id="@+id/btn_immediately_relation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/im_wait"
                android:layout_gravity="center"
                android:layout_marginLeft="100px"
                android:layout_marginTop="60px"
                android:layout_marginRight="100px"
                android:background="@drawable/bg_login_button_bg"
                android:enabled="true"
                android:gravity="center"
                android:paddingBottom="45px"
                android:text="立即联系"
                android:textColor="@color/color_white"
                android:textSize="50px" />


            <TextView
                android:id="@+id/ivw_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="50dp"
                android:paddingRight="32px"
                android:paddingBottom="8dp"
                android:tag="关于"
                android:textColor="#4A4A4A"
                android:textSize="11sp"
                android:visibility="visible" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>