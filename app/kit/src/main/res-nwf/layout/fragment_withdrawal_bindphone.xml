<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="370px"
        android:src="@mipmap/icon_withdrawal_dropdown" />

    <TextView
        android:layout_width="801px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60px"
        android:gravity="center"
        android:text="@string/str_addbank_bindphone"
        android:textColor="@color/color_4A4A4A"
        android:textSize="45px" />


    <TextView
        android:id="@+id/btn_go_bindphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100px"
        android:layout_marginTop="120px"
        android:layout_marginRight="100px"
        android:layout_marginBottom="180px"
        android:background="@drawable/bg_login_button_bg"
        android:enabled="true"
        android:gravity="center"
        android:paddingBottom="45px"
        android:text="@string/str_go_bindbank"
        android:textColor="@color/color_white"
        android:textSize="50px" />

</LinearLayout>