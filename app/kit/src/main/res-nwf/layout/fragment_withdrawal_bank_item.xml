<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/withdrawal_bank_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="220px"
        android:scaleType="fitXY"
        android:src="@mipmap/nwf_bg_bank_green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="50px"
            android:paddingTop="30px"
            android:paddingRight="50px">

            <ImageView
                android:id="@+id/withdrawal_bank_icon"
                android:layout_width="60px"
                android:layout_height="60px"
                android:src="@mipmap/icon_jsyh" />

            <TextView
                android:id="@+id/withdrawal_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="建设银行"
                android:textColor="@color/color_white"
                android:textSize="33px" />

            <TextView
                android:id="@+id/withdrawal_bank_branch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_weight="1"
                android:lines="1"
                android:singleLine="true"
                android:text="海淀黄庄支行"
                android:textColor="@color/color_white"
                android:textSize="28px" />

            <ImageView
                android:id="@+id/withdrawal_bank_select"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_gravity="right"
                android:src="@mipmap/icon_deposit_bank_list_click"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="50px"
            android:paddingTop="20px"
            android:paddingRight="50px">

            <TextView
                android:id="@+id/withdrawal_bank_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_weight="1"
                android:lines="1"
                android:singleLine="true"
                android:text="2*** **** **** **25"
                android:textColor="@color/color_white"
                android:textSize="50px" />

            <TextView
                android:id="@+id/account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:drawableLeft="@mipmap/icon_withdrawal_card_avatar"
                android:gravity="center"
                android:lines="1"
                android:singleLine="true"
                android:text="马高飞"
                android:textColor="@color/color_white"
                android:textSize="33px" />


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>