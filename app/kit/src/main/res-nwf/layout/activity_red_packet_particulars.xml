<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/im_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_redenvelope_details"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="126px"
            android:paddingLeft="24px"
            android:paddingRight="38px">

            <ImageView
                android:id="@+id/iv_com_title_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:src="@mipmap/nwf_icon_back_white" />

            <TextView
                android:id="@+id/tv_com_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="红包详情"
                android:textColor="@color/color_white"
                android:textSize="54px" />

            <TextView
                android:id="@+id/tv_com_title_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="红包记录"
                android:textColor="@color/color_white"
                android:textSize="40px" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tv_red_packet_username_portrait"
                android:layout_width="120px"
                android:layout_height="120px" />


            <TextView
                android:id="@+id/tv_red_packet_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="45px"
                android:paddingRight="45px"
                android:text="橙子的红包"
                android:textColor="@color/color_white"
                android:textSize="54px" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_red_packet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="¥ 100.00-1"
            android:paddingTop="5dp"
            android:textColor="@color/color_white"
            android:textSize="35px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center|bottom"
                android:paddingBottom="30px"
                android:text="￥"
                android:textColor="@color/color_white"
                android:textSize="50px"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_money_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:text="0.00"
                android:textColor="@color/color_white"
                android:textSize="120px"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_collect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="54px"
        android:layout_marginTop="70px"
        android:layout_marginBottom="20px"
        android:text="已领取7/7,共100.00/100.00元"
        android:textColor="@color/color_9B9B9B"
        android:textSize="34px" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_DFDDE6" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/red_packet_record"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"></androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
