<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <!--显示我的银行卡-->
    <RelativeLayout
        android:id="@+id/bank_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/withdrawal_bank_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="340px"
            android:scaleType="fitXY"
            android:src="@mipmap/nwf_bg_bank_green" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="20px"
            android:paddingTop="20px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="60px"
                android:paddingTop="30px"
                android:paddingRight="50px">

                <ImageView
                    android:id="@+id/withdrawal_bank_icon"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:src="@mipmap/icon_jsyh" />

                <TextView
                    android:id="@+id/withdrawal_bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="建设银行"
                    android:textColor="@color/color_white"
                    android:textSize="33px" />

                <TextView
                    android:id="@+id/withdrawal_bank_branch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_weight="1"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="海淀黄庄支行"
                    android:textColor="@color/color_white"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20px"
                    android:text="默认"
                    android:textColor="@color/color_white"
                    android:textSize="33px" />

                <ImageView
                    android:id="@+id/default_bank_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:src="@mipmap/icon_bank_switch_pressed"
                    android:visibility="visible" />
            </LinearLayout>


            <TextView
                android:id="@+id/withdrawal_bank_account"
                android:layout_width="match_parent"
                android:layout_height="51px"
                android:layout_marginLeft="50px"
                android:layout_marginTop="30px"
                android:lines="1"
                android:singleLine="true"
                android:text="2*** **** **** **25"
                android:textColor="@color/color_white"
                android:textSize="50px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="50px"
                android:paddingTop="20px"
                android:paddingRight="50px"
                android:paddingBottom="20px">

                <TextView
                    android:id="@+id/account_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/icon_withdrawal_card_avatar"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="马高飞"
                    android:textColor="@color/color_white"
                    android:textSize="33px" />

                <TextView
                    android:id="@+id/tv_bank_modification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30px"
                    android:layout_toLeftOf="@+id/tv_bank_delete"
                    android:background="@drawable/bg_bank_management_delet"
                    android:gravity="center"
                    android:minWidth="130px"
                    android:minHeight="60px"
                    android:text="修改"
                    android:textColor="@color/color_white"
                    android:textSize="33px" />

                <TextView
                    android:id="@+id/tv_bank_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_bank_management_delet"
                    android:gravity="center"
                    android:minWidth="130px"
                    android:minHeight="60px"
                    android:text="删除"
                    android:textColor="@color/color_white"
                    android:textSize="33px" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <!--添加银行卡-->
    <LinearLayout
        android:id="@+id/tv_add_bank"
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:layout_marginLeft="40px"
        android:layout_marginTop="25px"
        android:layout_marginRight="40px"
        android:layout_marginBottom="25px"
        android:background="@drawable/bg_withdrawal_add_bank"
        android:gravity="center"
        android:minHeight="300px"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/icon_withdrawal_add" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:gravity="center"
            android:text="添加银行"
            android:textColor="@color/color_4A4A4A"
            android:textSize="36px" />

    </LinearLayout>

</LinearLayout>
