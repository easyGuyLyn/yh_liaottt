<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/login_bg_figure" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/login_top_figure" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@mipmap/login_below_figure" />


<!--    <ScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100px"
                android:text="登录永乐棋牌，享更爽游戏体验"
                android:visibility="gone"
                android:textColor="@color/color_4A4A4A"
                android:textSize="43px" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="账号密码登录"
                android:textColor="@color/color_black"
                android:textSize="70px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46px"
                android:layout_marginTop="86px"
                android:layout_marginRight="46px"
                android:background="@drawable/edittext_common_bg"
                android:gravity="center_vertical"
                android:minHeight="160px"
                android:orientation="horizontal"
                android:paddingLeft="50px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:minWidth="150px"
                    android:text="V"
                    android:textColor="@color/color_4A4A4A" />

                <EditText
                    android:id="@+id/ed_account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2px"
                    android:layout_marginRight="70px"
                    android:layout_marginBottom="2px"
                    android:background="@color/color_white"
                    android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                    android:gravity="center_vertical"
                    android:hint="请输入游戏账号"
                    android:lines="1"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/color_9B9B9B"
                    android:textSize="40px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46px"
                android:layout_marginTop="60px"
                android:layout_marginRight="46px"
                android:background="@drawable/edittext_common_bg"
                android:gravity="center_vertical"
                android:minHeight="160px"
                android:orientation="horizontal"
                android:paddingLeft="50px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:minWidth="150px"
                    android:text="密码"
                    android:textColor="@color/color_4A4A4A" />

                <EditText
                    android:id="@+id/ed_password"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2px"
                    android:layout_marginBottom="2px"
                    android:layout_weight="1"
                    android:background="@color/color_white"
                    android:ems="16"
                    android:gravity="center_vertical"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/color_9B9B9B"
                    android:textSize="40px" />

                <ImageView
                    android:id="@+id/iv_login_pwd_show"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginRight="50px"
                    android:background="@mipmap/icon_password_close" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_n_login_account_password_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="账号或者密码错误，请重新输入"
                android:textColor="@color/color_FF3300"
                android:textSize="35px"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="100px"
                android:paddingTop="58px"
                android:paddingRight="100px">

                <TextView
                    android:id="@+id/tv_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_question"
                    android:drawablePadding="5px"
                    android:text="登录有问题？"
                    android:textColor="@color/color_9B9B9B"
                    android:textSize="33px" />

                <TextView
                    android:id="@+id/tv_switchover_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="手机号快捷登录"
                    android:textColor="@color/color_4A4A4A"
                    android:textSize="33px" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100px"
                android:layout_marginTop="150px"
                android:layout_marginRight="100px"
                android:background="@drawable/bg_login_button_bg"
                android:enabled="false"
                android:gravity="center"
                android:paddingBottom="45px"
                android:text="登录"
                android:textColor="@color/color_white"
                android:textSize="50px" />

        </LinearLayout>

<!--    </ScrollView>-->

    <TextView
        android:id="@+id/tv_go_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="86px"
        android:text="还没有账号？立即注册"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:textColor="@color/color_9B9B9B"
        android:textSize="34px" />

</RelativeLayout>