<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_1ECE94"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_1ECE94"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="63px">

                <ImageView
                    android:id="@+id/image_head"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10px"
                    android:scaleType="fitXY"
                    android:src="@mipmap/im_default_header" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_imuser_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="vqwe12332"
                        android:textColor="@color/color_white"
                        android:textSize="46px" />

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账号：vqwe12332"
                        android:textColor="@color/color_white"
                        android:textSize="35px" />
                </LinearLayout>
            </LinearLayout>

            <com.nwf.sports.ui.views.StarBarView
                android:id="@+id/sbv_starbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18px"
                app:space_width="12px"
                app:star_height="36px"
                app:star_hollow="@mipmap/icon_card_star_fade"
                app:star_isIndicator="true"
                app:star_max="7"
                app:star_orientation="horizontal"
                app:star_rating="0"
                app:star_solid="@mipmap/icon_card_star_highlighted"
                app:star_width="36px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70px"
                android:text="本地余额"
                android:textColor="@color/color_white"
                android:textSize="46px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="20px"
                android:paddingBottom="40px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/color_white"
                    android:textSize="35px" />

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="@color/color_white"
                    android:textSize="80px" />

                <ImageView
                    android:id="@+id/im_balance_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10px"
                    android:padding="15px"
                    android:src="@mipmap/icon_capital_head_refresh" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/nwf_bg_capital" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_deposit_circular"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ly_withdrawal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="75px"
            android:paddingTop="37px"
            android:paddingRight="75px"
            android:paddingBottom="37px">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_me_credit" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="30px"
                android:text="取款"
                android:textColor="@color/color_4A4A4A" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nwf_icon_withdrawal_right" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.5px"
            android:layout_marginLeft="75px"
            android:layout_marginRight="75px"
            android:background="@color/color_DFDDE6" />

        <LinearLayout
            android:id="@+id/ly_qr_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="75px"
            android:paddingTop="37px"
            android:paddingRight="75px"
            android:paddingBottom="37px">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nwf_icon_qr" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="30px"
                android:text="二维码"
                android:textColor="@color/color_4A4A4A" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nwf_icon_withdrawal_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_redpacket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="75px"
            android:paddingTop="37px"
            android:paddingRight="75px"
            android:paddingBottom="37px">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_me_redenvelope" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="30px"
                android:text="红包记录"
                android:textColor="@color/color_4A4A4A" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nwf_icon_withdrawal_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_account_records"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="75px"
            android:paddingTop="37px"
            android:paddingRight="75px"
            android:paddingBottom="37px">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nwf_icon_file" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="30px"
                android:text="账户记录"
                android:textColor="@color/color_4A4A4A" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nwf_icon_withdrawal_right" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.5px"
            android:layout_marginLeft="75px"
            android:layout_marginRight="75px"
            android:background="@color/color_DFDDE6" />

        <LinearLayout
            android:id="@+id/ly_mobile_management"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="75px"
            android:paddingTop="37px"
            android:paddingRight="75px"
            android:paddingBottom="37px">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_mobilenumber" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="30px"
                android:text="手机管理"
                android:textColor="@color/color_4A4A4A" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nwf_icon_withdrawal_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_bank_management"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="75px"
            android:paddingTop="37px"
            android:paddingRight="75px"
            android:paddingBottom="37px">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nwf_icon_bankcard" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="30px"
                android:text="银行卡管理"
                android:textColor="@color/color_4A4A4A" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nwf_icon_withdrawal_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_modification_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="75px"
            android:paddingTop="37px"
            android:paddingRight="75px"
            android:paddingBottom="37px">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_modification_password" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="30px"
                android:text="修改密码"
                android:textColor="@color/color_4A4A4A" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nwf_icon_withdrawal_right" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.5px"
            android:layout_marginLeft="75px"
            android:layout_marginRight="75px"
            android:background="@color/color_DFDDE6" />

        <LinearLayout
            android:id="@+id/ly_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="75px"
            android:paddingTop="37px"
            android:paddingRight="75px"
            android:paddingBottom="37px">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_service" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="30px"
                android:text="联系客服"
                android:textColor="@color/color_4A4A4A" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nwf_icon_withdrawal_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_check_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="75px"
            android:paddingTop="37px"
            android:paddingRight="75px"
            android:paddingBottom="37px"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_checkupdate" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="30px"
                android:text="检查更新"
                android:textColor="@color/color_4A4A4A" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nwf_icon_withdrawal_right" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.5px"
            android:layout_marginLeft="75px"
            android:layout_marginRight="75px"
            android:background="@color/color_DFDDE6" />

        <TextView
            android:id="@+id/tv_secede"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="100px"
            android:paddingTop="60px"
            android:paddingRight="100px"
            android:paddingBottom="60px"
            android:text="登出"
            android:textColor="@color/color_4A4A4A" />
    </LinearLayout>

</LinearLayout>