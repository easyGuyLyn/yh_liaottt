<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_40_black"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/transparency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="250px"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_login_dialogfragment"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="180px"
                android:gravity="center"
                android:text="选择支付银行"
                android:textColor="@color/color_black"
                android:textSize="51px" />

            <ImageView
                android:id="@+id/ivw_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="50px"
                android:layout_marginRight="40px"
                android:padding="24px"
                android:src="@mipmap/icon_close" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_dep_bank_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:layout_marginTop="50px"
            android:layout_marginRight="100px"
            android:background="@drawable/bg_login_button_bg"
            android:enabled="false"
            android:gravity="center"
            android:paddingBottom="45px"
            android:text="去存款"
            android:textColor="@color/color_white"
            android:textSize="50px" />
    </LinearLayout>
</LinearLayout>
