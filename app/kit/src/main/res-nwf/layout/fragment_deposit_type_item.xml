<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_deposit_type"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginTop="30px"
        android:background="@drawable/bg_deposit_type"
        android:enabled="true"
        android:gravity="center_vertical"
        android:minHeight="125px"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/im_deposite_icon"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:src="@mipmap/icon_service" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:gravity="center"
                android:text="银联支付"
                android:textColor="@color/color_deposit_type_text"
                android:textSize="35px" />

            <TextView
                android:id="@+id/tv_type_quota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="限额 11~100万"
                android:textColor="@color/color_9B9B9B"
                android:textSize="25px" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>