<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/im_white"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/img_entrance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                android:adjustViewBounds="true"
                android:src="@mipmap/home_sport_game_entrance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="35px"
                android:text="赛事应有尽有  玩法一应俱全"
                android:textColor="@color/color_221D4C" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="120px"
                android:background="@drawable/bg_home_sports_entrance"
                android:gravity="center"
                android:minWidth="390px"
                android:paddingLeft="20px"
                android:paddingTop="20px"
                android:paddingRight="20px"
                android:paddingBottom="20px"
                android:text="进入游戏"
                android:textColor="@color/color_white"
                android:textSize="50px" />

        </FrameLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>