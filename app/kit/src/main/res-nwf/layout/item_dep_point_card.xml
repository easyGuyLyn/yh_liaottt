<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/v_root"
    android:layout_width="match_parent"
    android:layout_height="168px"
    android:layout_margin="20px"
    android:background="@drawable/bg_deposit_point_card_item_normal"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivw_dep_pc_logo"
        android:layout_width="268px"
        android:layout_height="88px"
        android:src="@mipmap/icon_dkzt" />

    <TextView
        android:id="@+id/tvw_dep_pc_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="某网一卡通"
        android:textColor="@color/color_4A4A4A"
        android:textSize="40px" />


</LinearLayout>
